#!/usr/bin/env sh

echo "ğŸ” Running ESLint..."
npm run lint
LINT_EXIT=$?

echo "ğŸ” Running TypeScript type check..."
npm run typecheck
TYPECHECK_EXIT=$?

if [ "$LINT_EXIT" -ne 0 ] || [ "$TYPECHECK_EXIT" -ne 0 ]; then
  echo "âŒ Pre-commit checks failed. Fix errors before committing."
  exit 1
fi

echo "âœ… Pre-commit checks passed!"
